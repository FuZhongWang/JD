<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/child_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="" />

    <TextView
        android:id="@+id/child_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/child_img"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/child_img"
        android:text="TextView" />

    <ImageView
        android:id="@+id/child_img"
        android:layout_margin="8dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/child_cb"
        app:srcCompat="@drawable/carma" />

    <TextView
        android:id="@+id/child_price"
        android:textColor="#ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/child_img"
        android:layout_alignStart="@+id/child_tv"
        android:text="TextView"/>

    <xudeyang.bawie.com.jd.utils.CountView
        android:id="@+id/child_countView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/child_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
         />



</RelativeLayout>
