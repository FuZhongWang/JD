<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/addr_rcv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:text="TextView" />

    <TextView
        android:id="@+id/addr_rcv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addr_rcv_name"
        android:layout_marginStart="75dp"
        android:textColor="#000"
        android:text="TextView" />

    <TextView
        android:id="@+id/addr_rcv_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addr_rcv_name"
        android:layout_below="@+id/addr_rcv_name"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text="TextView" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#838181"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <CheckBox
            android:id="@+id/addr_rcv_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="默认地址" />

        <TextView
            android:id="@+id/addr_rcv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="删除" />

        <TextView
            android:id="@+id/addr_rcv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/addr_rcv_del"
            android:layout_toStartOf="@+id/addr_rcv_del"
            android:text="编辑" />

        <TextView
            android:id="@+id/addr_rcv_addrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addr_rcv_update"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/addr_rcv_update"
            android:visibility="invisible"
            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#838181"/>
    </RelativeLayout>
</LinearLayout>
