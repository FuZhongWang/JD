<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/rflayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/frag1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"></com.youth.banner.Banner>
            <ImageView
                android:id="@+id/frag1_img"
                android:layout_below="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/qiche"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/frag1_grid"
                android:layout_below="@+id/frag1_img"
                android:layout_width="match_parent"
                android:layout_height="140dp"></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/frag1_text"
                android:layout_below="@+id/frag1_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round1"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/imageView111"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/jdkb" />
                <ViewFlipper
                    android:id="@+id/filpper"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/imageView111"
                    android:layout_height="wrap_content"
                    android:autoStart="true"
                    android:flipInterval="4000"
                    android:inAnimation="@anim/anim_come_in"
                    android:outAnimation="@anim/anim_get_out"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="| 更多"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:textSize="15dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/frag1_miaosha"
                android:layout_below="@+id/frag1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/miaosha_tvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京东秒杀"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ff00"/>

                <TextView
                    android:id="@+id/miaosha_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/miaosha_tvv"
                    android:layout_toEndOf="@+id/miaosha_tvv"
                    android:text="TextView"
                    android:layout_margin="1dp"
                    android:textColor="#000" />

                <cn.iwgang.countdownview.CountdownView
                    android:id="@+id/countdownView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/miaosha_tv"
                    android:layout_toEndOf="@+id/miaosha_tv"
                    android:background="@drawable/daojishi_1"
                    android:padding="4dp"
                    android:layout_margin="1dp"
                    app:isShowHour="true"
                    app:suffixHour=":"
                    app:suffixMinute=":"
                    app:suffixTextColor="#00000000"
                    app:timeBgRadius="3dp"
                    app:timeTextColor="#fff"
                    app:timeTextSize="14dp" />

                <TextView
                    android:id="@+id/miaosha_vvvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/countdownView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="京选轮番秒>"
                    android:textColor="#f00"
                    android:textSize="13dp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/miaosha_rcv"
                    android:layout_below="@+id/miaosha_tvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <ImageView
                android:id="@+id/frag1_weinituijian"
                android:layout_below="@+id/frag1_miaosha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/aishenghuo"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/frag1_stag"
                android:layout_below="@id/frag1_weinituijian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="25dp"></RelativeLayout>
    <xudeyang.bawie.com.jd.utils.SearchActivity
        android:id="@+id/ss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rll"></xudeyang.bawie.com.jd.utils.SearchActivity>
    <ImageView
        android:id="@+id/frag1_imgbtn1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:src="@drawable/selectheart"/>
    <ImageView
        android:id="@+id/frag1_imgbtn2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:src="@drawable/normalheart"/>
</RelativeLayout>
