<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentTop="true"
    android:id="@+id/f1_frag"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="45dp">


    <View
        android:id="@+id/home_title_bar_bg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/f1_erweima"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/aa_z"
                android:src="@drawable/a_s"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/aa_zz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#fff"
                android:text="扫啊扫"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="3px"
            android:layout_marginRight="3px"
            android:background="@drawable/round"
            android:gravity="center_vertical"
            android:id="@+id/bgll"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/a_cha"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search_icon2"
                android:layout_width="17dp"
                android:layout_height="17dp" />

            <TextView
                android:id="@+id/a_ed"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textColor="#565656"
                android:textSize="13dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="运动户外超级品牌类日 跨店铺跨店铺"
                />
            <ImageView
                android:id="@+id/aa_img"
                android:focusable="false"
                android:layout_marginRight="5dp"
                android:src="@drawable/root"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="50dp"
            android:id="@+id/aa_xx"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/a9x"
                android:id="@+id/a_xiaoxi"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/aa_xiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#fff"
                android:text="消息"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
