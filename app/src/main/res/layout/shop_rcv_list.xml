<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shop_rcv_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/shop_rcv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shop_rcv_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_toEndOf="@+id/shop_rcv_img"
        android:text="TextView" />

    <TextView
        android:id="@+id/shop_rcv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shop_rcv_time"
        android:layout_marginBottom="5dp"
        android:textColor="#f00"
        android:layout_alignStart="@+id/shop_rcv_title"
        android:text="TextView" />

    <TextView
        android:id="@+id/shop_rcv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_rcv_img"
        android:layout_alignStart="@+id/shop_rcv_price"
        android:text="TextView" />
</RelativeLayout>
